{
  "name": "find-a-dish-node",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js | pino-pretty",
    "test": "jest --runInBand",
    "lint": "eslint src/**",
    "knex": "knex",
    "db:create:dev": "createdbjs ${DATABASE_DB} --user=${DATABASE_USER} --password=${DATABASE_PASSWORD} --host=${DATABASE_HOST}",
    "db:create:test": "createdbjs ${TEST_DATABASE_DB} --user=${TEST_DATABASE_USER} --password=${TEST_DATABASE_PASSWORD} --host=${TEST_DATABASE_HOST}",
    "db:migrate:dev": "knex migrate:latest",
    "db:migrate:test": "knex migrate:latest --env=test",
    "docker:install": "docker-compose run app npm i",
    "docker:dev": "docker-compose up",
    "docker:db:create:dev": "docker-compose run app bash -c \"npm run db:create:dev\"",
    "docker:test": "docker-compose run test npm test",
    "docker:db:create:test": "docker-compose run app bash -c \"npm run db:create:test\"",
    "docker:db:migrate:dev": "docker-compose run app npm run db:migrate:dev",
    "docker:db:migrate:test": "docker-compose run test npm run db:migrate:test"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.0",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "knex": "^2.1.0",
    "objection": "^3.0.1",
    "pg": "^8.7.3",
    "pgtools": "0.3.2",
    "pino": "^8.0.0",
    "pino-http": "^7.1.0",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.4.0"
  },
  "devDependencies": {
    "dotenv": "^16.0.1",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.4.6",
    "eslint-plugin-jsdoc": "^39.3.2",
    "jest": "^28.1.0",
    "knex-cleaner": "^1.3.1",
    "nodemon": "^2.0.16",
    "pino-pretty": "^8.0.0",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3"
  }
}
